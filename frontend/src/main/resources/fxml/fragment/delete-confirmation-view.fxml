<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="900.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Pane opacity="0.5" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: gray;" />
      <StackPane maxHeight="500.0" maxWidth="800.0" prefHeight="500.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-background-radius: 20;">
         <children>
            <BorderPane prefHeight="200.0" prefWidth="200.0">
               <top>
                  <VBox alignment="BOTTOM_CENTER" prefHeight="160.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="BOTTOM_CENTER">
                     <children>
                        <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../images/delete-confirmation-icon.png" />
                           </image>
                        </ImageView>
                        <Label stylesheets="@../../styles/table.css" text="Confirmation de suppression" textFill="#333333">
                           <font>
                              <Font name="Candara Bold" size="22.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="10.0" />
                     </padding>
                  </VBox>
               </top>
               <center>
                  <HBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
                     <children>
                        <Label stylesheets="@../../styles/table.css" text="Etes-vous sûr de vouloir supprimer définitivement l'élément sélectionné ?" textFill="#333333">
                           <font>
                              <Font name="Candara Bold" size="22.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </center>
               <bottom>
                  <HBox alignment="CENTER_RIGHT" prefHeight="70.0" spacing="20.0" BorderPane.alignment="CENTER">
                     <children>
                        <Label fx:id="returnButton" text="Retourner" textFill="#59a6c6">
                           <font>
                              <Font name="Candara Bold" size="18.0" />
                           </font>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Label>
                        <Label fx:id="continueButton" layoutX="10.0" layoutY="10.0" text="Continuer" textFill="#d95b66">
                           <font>
                              <Font name="Candara Bold" size="18.0" />
                           </font>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Label>
                     </children>
                     <BorderPane.margin>
                        <Insets right="20.0" />
                     </BorderPane.margin>
                  </HBox>
               </bottom>
            </BorderPane>
         </children>
      </StackPane>
   </children>
</StackPane>
