<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane id="shadowPane" style="-fx-background-color: #ffffff; -fx-background-radius: 20;" stylesheets="@../../styles/table.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <BorderPane>
         <center>
            <HBox>
               <children>
                  <Label fx:id="preMessage" layoutX="10.0" layoutY="10.0" maxHeight="40.0" prefHeight="30.0" text="Test message over here " textFill="RED">
                     <padding>
                        <Insets bottom="20.0" left="50.0" right="5.0" />
                     </padding>
                     <font>
                        <Font name="Candara Bold" size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="message" maxHeight="0.0" prefHeight="30.0" text="Test message over here" textFill="RED">
                     <padding>
                        <Insets bottom="20.0" right="50.0" />
                     </padding>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </center>
         <top>
            <VBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
               <padding>
                  <Insets right="10.0" />
               </padding>
               <children>
                  <ImageView fx:id="removeMessageButton" fitHeight="15.0" fitWidth="10.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/dash-line-logo.png" />
                     </image>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <VBox.margin>
                        <Insets right="5.0" top="10.0" />
                     </VBox.margin>
                  </ImageView>
               </children>
            </VBox>
         </top>
      </BorderPane>
   </children>
</Pane>
